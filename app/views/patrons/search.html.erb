<%= form_tag patrons_results_path, method: :get do %>
    <p>
    <%= label_tag  :title %> <br>
    <%= text_field_tag :title, params[:title] %> 
    </p>

    <p>
    <%= label_tag  :author %> <br>
    <%= text_field_tag :author, params[:author] %>
    </p>

    <p>
    <%= label_tag  :isbn %> <br>
    <%= text_field_tag :isbn, params[:isbn] %><br>
    </p>
    <%= submit_tag "Search", name: nil %>
<% end %>